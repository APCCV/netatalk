#!/bin/sh
#
# PROVIDE: afpd
# REQUIRE: cnid_metad
# KEYWORD: shutdown
#
# AFP fileserver for Macintosh clients (netatalk :NETATALK_VERSION:)
#

. /etc/rc.subr

name="afpd"
rcvar=$name
command=":SBINDIR:/afpd"
etcdir=":ETCDIR:"
pidfile="/var/run/${name}.pid"
command_args="-P ${pidfile}"
required_files="$etcdir/afp.conf

load_rc_config $name
run_rc_command "$1"
